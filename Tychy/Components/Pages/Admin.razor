@page "/admin"
@using Microsoft.EntityFrameworkCore
@using Tychy.Components.Services
@rendermode InteractiveServer
@inject PlatformService platformService
@inject RequestService requestService

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-speedometer2"></i> Panel pracownika
        </h2>
        <div class="btn-group">
            <button class="btn btn-outline-primary">
                <i class="bi bi-arrow-clockwise"></i> Odśwież
            </button>
            <button class="btn btn-outline-secondary">
                <i class="bi bi-gear"></i> Ustawienia
            </button>
        </div>
    </div>

    <!-- Statystyki -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@pendingRequests</h4>
                            <p class="card-text">Oczekujących zgłoszeń</p>
                        </div>
                        <div>
                            <i class="bi bi-clock display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@sentRequests</h4>
                            <p class="card-text">Wysłanych kodów</p>
                        </div>
                        <div>
                            <i class="bi bi-check-circle display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@rejectedRequests</h4>
                            <p class="card-text">Odrzuconych</p>
                        </div>
                        <div>
                            <i class="bi bi-x-circle display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@allRequests</h4>
                            <p class="card-text">Prośby w miesiącu</p>
                        </div>
                        <div>
                            <i class="bi bi-graph-up display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista zgłoszeń -->
    <div class="row">
        <div class="col-12">
            <div class="bg-light">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i> Oczekujące zgłoszenia
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <button class="btn btn-primary" @onclick="SendAll" title="Wyślij wszystkie zaakceptowane kody">
                            <i class="bi bi-envelope">Wyślij wszystkie zaakceptowane kody</i>
                        </button>
                        <button class="btn btn-primary" @onclick="AcceptAll" title="Zaakceptuj wszystkie dobre prośby">
                            <i class="bi bi-envelope">Zaakceptuj poprawne kody</i>
                        </button>
                        <button class="btn btn-primary" @onclick="DeclineAll" title="Odrzuć wszystkie złe kody">
                            <i class="bi bi-envelope">Odrzuć wszystkie złe kody</i>
                        </button>
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Data</th>
                                    <th>Czytelnik</th>
                                    <th>Platforma</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="blocked-style">
                                    <td>Nigdy</td>
                                    <td>
                                        <strong>123456</strong>
                                        <br>
                                        <small class="text-muted">Jan Zablokowany</small>
                                    </td>
                                    <td>Legimi GO</td>
                                    <td>j.merchel21@qmail.com</td>
                                </tr>
                                @if(hasRequests)
                                {
                                    @foreach (var r in platformService._context.Requests)
                                    {
                                        @if (r != null)
                                        {
                                            <tr class="@(r.Reader == null || (!(r.Reader.IsBlocked || r.Reader.HasUnusedCodeLastMonth)) ? "" : "blocked-style") @(!(r.Status == RequestStatus.Approved) ? "" : "approved-style")">
                                                <td>@r.RequestDate</td>
                                                <td>
                                                    @if (r.Reader != null)
                                                    {
                                                        <strong>@r.Reader.ReaderNumber</strong>

                                                        <br>
                                                        <small class="text-muted">@r.Reader.FullName</small>
                                                    }
                                                    else
                                                    {
                                                        <strong>Brak danych czytelnika</strong>

                                                        <br>
                                                        <small class="text-muted">Reader jest null</small>
                                                    }
                                                </td>
                                                @if (r.Platform != null)
                                                {
                                                    <td>@r.Platform.Name</td>
                                                }
                                                <td>@r.Email</td>
                                                <td><span class="badge bg-warning">@r.Status</span></td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <button class="btn btn-success" @onclick="() => ApproveRequest(r.Id)" title="Zaakceptuj">
                                                            <i class="bi bi-check-lg"></i>
                                                        </button>
                                                        <button class="btn btn-danger" @onclick="() => RejectRequest(r.Id)" title="Odrzuć">
                                                            <i class="bi bi-x-lg"></i>
                                                        </button>
                                                        <button class="btn btn-primary" @onclick="() => SendCode(r.Id)" title="Wyślij kod">
                                                            <i class="bi bi-envelope"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Brak zgłoszeń</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <button class="btn btn-primary" @onclick="SendAll" title="Wyślij wszystkie zaakceptowane kody">
                            <i class="bi bi-envelope">Wyślij wszystkie zaakceptowane kody</i>
                        </button>
                        <button class="btn btn-primary" @onclick="AcceptAll" title="Zaakceptuj wszystkie dobre prośby">
                            <i class="bi bi-envelope">Zaakceptuj poprawne kody</i>
                        </button>
                        <button class="btn btn-primary" @onclick="DeclineAll" title="Odrzuć wszystkie złe kody">
                            <i class="bi bi-envelope">Odrzuć wszystkie złe kody</i>
                        </button>
                    </div>

                    @* <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!pagedRequests.HasPrevious ? "disabled" : "")">
                                <a class="page-link" @onclick="() => ChangePage(pagedRequests.CurrentPage - 1)" @onclick:preventDefault>
                                    Poprzednia
                                </a>
                            </li>            
                            @for (int i = 1; i <= pagedRequests.TotalPages; i++)
                            {
                                <li class="page-item @(i == pagedRequests.CurrentPage ? "active" : "")">
                                    <a class="page-link" @onclick="() => ChangePage(i)" @onclick:preventDefault>
                                        @i
                                    </a>
                                </li>
                            }           
                            <li class="page-item @(!pagedRequests.HasNext ? "disabled" : "")">
                                <a class="page-link" @onclick="() => ChangePage(pagedRequests.CurrentPage + 1)" @onclick:preventDefault>
                                    Następna
                                </a>
                            </li>
                        </ul>
                    </nav> *@
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private PagedResult<CodeRequest> pagedRequests = new();
    private int pendingRequests;
    private int sentRequests;
    private int rejectedRequests;
    private int allRequests;
    private bool hasRequests;
    private List<CodeRequest> reqs = new List<CodeRequest>();
    private List<Reader> reads = new List<Reader>();

    protected override async Task OnInitializedAsync()
    {
        reqs = await requestService.GetRequestsAsync();
        reads = await requestService.GetReadersAsync();
        hasRequests = await platformService._context.Requests.CountAsync() != 0;
        pendingRequests = await requestService._context.Requests.CountAsync(item => item.Status == RequestStatus.Pending);
        sentRequests = await requestService._context.Requests.CountAsync(item => item.Status == RequestStatus.EmailSent);
        rejectedRequests = await requestService._context.Requests.CountAsync(item => item.Status == RequestStatus.Rejected);
        allRequests = await requestService._context.Requests.CountAsync();
        await LoadData();
    }

    private async Task LoadData(int page = 1)
    {
        var query = platformService._context.Requests.AsQueryable();

        pagedRequests.TotalCount = await query.CountAsync();
        pagedRequests.CurrentPage = page;
        pagedRequests.PageSize = 2;

        pagedRequests.Items = await query
            .Skip((page - 1) * pagedRequests.PageSize)
            .Take(pagedRequests.PageSize)
            .ToListAsync();
    }

    private async Task ChangePage(int page)
    {
        if (page >= 1 && page <= pagedRequests.TotalPages)
        {
            await LoadData(page);
        }
    }
    private EventCallback ApproveRequest(int requestId)
    {
        Console.WriteLine($"Approving request {requestId}");
        requestService.Approve(requestId);
        return new EventCallback();
    }

    private EventCallback RejectRequest(int requestId)
    {
        Console.WriteLine($"Rejecting request {requestId}");
        requestService.Reject(requestId);
        return new EventCallback();
    }

    private async Task SendCode(int requestId)
    {
        Console.WriteLine("\n");
        Console.WriteLine("\n");
        Console.WriteLine("\n");
        Console.WriteLine("\n");
        Console.WriteLine("\n");
        Console.WriteLine($"Sending code for request {requestId}");
        await requestService.Send(requestId);
        await requestService.RemoveCode(requestId);
    }
    private void SendAll()
    {       
        foreach (var r in requestService._context.Requests)
        {
            if(r.Status == RequestStatus.Approved)
            {
                Console.WriteLine($"Sending code for request {r.Id}");
                requestService.Send(r.Id);
                requestService.RemoveCode(r.Id);
            }
        }
    }
    private void AcceptAll()
    {
        requestService.ApproveAll();
    }
    private void DeclineAll()
    {
        requestService.RejectAll();
    }
}