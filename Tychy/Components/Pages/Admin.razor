@page "/admin"
@using Tychy.Components.Services
@rendermode InteractiveServer
@inject PlatformService platformService
@inject RequestService requestService

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-speedometer2"></i> Panel pracownika
        </h2>
        <div class="btn-group">
            <button class="btn btn-outline-primary">
                <i class="bi bi-arrow-clockwise"></i> Odśwież
            </button>
            <button class="btn btn-outline-secondary">
                <i class="bi bi-gear"></i> Ustawienia
            </button>
        </div>
    </div>

    <!-- Statystyki -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">45</h4>
                            <p class="card-text">Oczekujących zgłoszeń</p>
                        </div>
                        <div>
                            <i class="bi bi-clock display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">127</h4>
                            <p class="card-text">Wysłanych kodów</p>
                        </div>
                        <div>
                            <i class="bi bi-check-circle display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">12</h4>
                            <p class="card-text">Odrzuconych</p>
                        </div>
                        <div>
                            <i class="bi bi-x-circle display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">584</h4>
                            <p class="card-text">Łącznie w miesiącu</p>
                        </div>
                        <div>
                            <i class="bi bi-graph-up display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista zgłoszeń -->
    <div class="row">
        <div class="col-12">
            <div class="bg-light">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i> Oczekujące zgłoszenia
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Data</th>
                                    <th>Czytelnik</th>
                                    <th>Platforma</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(platformService._context.Requests.Count() != 0)
                                {
                                    @foreach (var r in platformService._context.Requests)
                                    {
                                        <tr>
                                            <td>@r.RequestDate</td>
                                            <td>
                                                @if (r.Reader != null)
                                                {
                                                    <strong>@r.Reader.ReaderNumber</strong>

                                                    <br>
                                                    <small class="text-muted">@r.Reader.FullName</small>
                                                }
                                                else
                                                {
                                                    <strong>Brak danych czytelnika</strong>

                                                    <br>
                                                    <small class="text-muted">Reader jest null</small>
                                                }
                                            </td>
                                            <td>@r.Platform</td>
                                            <td>@r.Email</td>
                                            <td><span class="badge bg-warning">@r.Status</span></td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-success" @onclick="() => ApproveRequest(r.Id)" title="Zaakceptuj">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                    <button class="btn btn-danger" @onclick="() => RejectRequest(r.Id)" title="Odrzuć">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                    <button class="btn btn-primary" @onclick="() => SendCode(r.Id)" title="Wyślij kod">
                                                        <i class="bi bi-envelope"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Brak zgłoszeń</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled"><a class="page-link" href="#">Poprzednia</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Następna</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="bg-light">
                    <div class="card-header navbar-dark-tychy text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-envelope-plus"></i> Dodaj platformę
                        </h4>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="name" class="form-label">Nazwa *</label>
                                <input type="text" class="form-control" id="nameId"
                                       placeholder="Wprowadź nazwę nowej platformy"
                                       @bind="platformName"/>
                            </div>

                            <div class="mb-3">
                                <label for="instructions" class="form-label">Instrukcje *</label>
                                <input type="text" class="form-control" id="instructionsId"
                                       placeholder="Wprowadź instrukcję używania kodu"
                                       @bind="platformInstructions"/>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-primary btn-lg" @onclick="AddPlatform">
                                    <i class="bi bi-send"></i> Wyślij zgłoszenie
                                </button>
                                <button type="reset" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-clockwise"></i> Wyczyść formularz
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string platformName = string.Empty;
    private string platformInstructions = string.Empty;

    private EventCallback ApproveRequest(int requestId)
    {
        Console.WriteLine($"Approving request {requestId}");
        requestService.Approve(requestId);
        return new EventCallback();
    }

    private EventCallback RejectRequest(int requestId)
    {
        Console.WriteLine($"Rejecting request {requestId}");
        requestService.Reject(requestId);
        return new EventCallback();
    }

    private EventCallback SendCode(int requestId)
    {
        Console.WriteLine($"Sending code for request {requestId}");
        requestService.Send(requestId);
        return new EventCallback();
    }
    private async void AddPlatform()
    {
        Console.WriteLine("AddedPlatform");
        try
        {
            await platformService.AddPlatform(platformName, platformInstructions);

            Console.WriteLine("Zgłoszenie wysłane!");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd: {ex.Message}");
        }
    }
}